<table class="table table-striped table-sm">
  <thead class="table-dark">
    <tr>
      <th>Arquivo</th>
      <th>Mensagem</th>
      <th>Criado em</th>
    </tr>
  </thead>
  <tbody>
    <% logs.each do |log| %>
      <tr id="<%= dom_id(log) %>" class="<%= log_row_class(log.status) %>">
        <td><%= log.email_file&.file&.filename %></td>
        <td><%= truncate(log.message, length: 60) %></td>
        <td><%= l log.created_at, format: :short %></td>
      </tr>
    <% end %>
  </tbody>
</table>