<div id="flash-messages" class="fixed top-4 right-4 z-50 flex flex-col gap-3 pointer-events-none w-80">
  <% flash.each do |type, message| %>
    <% 
      # ðŸŽ¯ Mapeamento de cores para replicar o estilo Bootstrap 5 (fundo claro, texto escuro)
      case type.to_sym
      when :notice 
        bg_class = "bg-green-100 border-green-500"
        text_color = "text-green-800"
        icon_color = "text-green-600"
      when :alert, :error 
        bg_class = "bg-red-100 border-red-500"
        text_color = "text-red-800"
        icon_color = "text-red-600"
      else 
        bg_class = "bg-blue-100 border-blue-500"
        text_color = "text-blue-800"
        icon_color = "text-blue-600"
      end
    %>

    <div data-controller="flash"
         class="<%= bg_class %> <%= text_color %> border-l-4 px-4 py-3 rounded-lg shadow-md
                background-opacity-90  
                pointer-events-auto transform transition-all duration-500 ease-in-out"
         role="alert">
      
      <div class="flex justify-between items-center gap-4">
        <span class="font-medium flex-grow"><%= message %></span>
      </div>
    </div>
  <% end %>
</div>